<div class="post card">
    <div class="card-header">
        <h2>Edit Your Post</h2>
    </div>
    <form id="edit-post-form" class="card-body">
        <input type="hidden" name="post_id" value="{{ post.id}}" />

        <label class="form-label" for="post-title">Post Title</label>
        <input type="text" name="post-title" id="post-title" value="{{ post.title }}"/>
        <label for="form-label" for="post-body">Post Body</label>
        <textarea name="post-body" class="form-input">{{post.body}}</textarea>

        <button type="submit" class="btn">Update Post</button>

        <button type="button" id="delete-btn" class="btn">Delete Post</button>
        </form>
</div>

<script src="/javascript/edit.js"></script>